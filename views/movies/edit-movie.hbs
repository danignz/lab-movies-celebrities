<h2>Editing: {{movie.title}}</h2>

<form method="POST" action="/movies/{{movie._id}}">

  <label>Title</label>
  <input type="text" name="title" value="{{movie.title}}" />

  <label>Genre</label>
  <input type="text" name="genre" value="{{movie.genre}}" />

  <label>Plot</label>
  <input type="text" name="plot" value="{{movie.plot}}" />

  <label for="celebrities-select">Cast:</label>

  <select name="cast" id="celebrities-select" multiple>
    <optgroup label="Choose one or more:">
      {{#each celebrities}}
        {{#if worksInMovie}}
          <option value={{this._id}} selected>{{this.name}}</option>
        {{else}}
          <option value={{this._id}}>{{this.name}}</option>
        {{/if}}
      {{/each}}
    </optgroup>
  </select>

  <button type="submit">Save changes</button>

</form>