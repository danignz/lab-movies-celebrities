<h2>Create a new movie</h2>

<form method="POST" action="/movies/create">

  <label>Title</label>
  <input type="text" name="title" />

  <label>Genre</label>
  <input type="text" name="genre" />

  <label>Plot</label>
  <input type="text" name="plot" />

  <label for="celebrities-select">Cast:</label>

  <select name="cast" id="celebrities-select" multiple>
    <optgroup label="Choose one or more:">
      {{#each celebrities}}
        <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
    </optgroup>
  </select>

  <button type="submit">Create the new movie</button>

</form>

<a class="homelink" href="/">Back Home Page</a>
